<Window x:Class="DndHelper.View.CreateCharacterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DndHelper.View"
        mc:Ignorable="d"
        Title="CreateCharacterWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TabControl Grid.RowSpan="1" Margin="2,0,2,0">
            <TabItem Header="Character">
                <WrapPanel>
                    <ComboBox ItemsSource="{Binding Classes}" SelectedItem="{Binding SelectedClass}" Width="150">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding ClassCharacter}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </WrapPanel>
                
            </TabItem>
            <TabItem Header="Stats">
                
            </TabItem>
        </TabControl>
    </Grid>
</Window>
